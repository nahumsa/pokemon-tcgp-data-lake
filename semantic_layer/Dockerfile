# Generated by Gemini CLI - Martin Fowler Edition
FROM ghcr.io/astral-sh/uv:python3.12-bookworm-slim AS builder

ENV UV_COMPILE_BYTECODE=1 UV_LINK_MODE=copy

WORKDIR /app

RUN --mount=type=cache,target=/root/.cache/uv \
  --mount=type=bind,source=uv.lock,target=uv.lock \
  --mount=type=bind,source=pyproject.toml,target=pyproject.toml \
  --mount=type=bind,source=semantic_layer/pyproject.toml,target=semantic_layer/pyproject.toml \
  uv sync --frozen --no-install-project --no-dev --package pokemon-tcgp-semantic-layer

# Add the package source
ADD semantic_layer /app/semantic_layer

RUN --mount=type=cache,target=/root/.cache/uv \
  --mount=type=bind,source=uv.lock,target=uv.lock \
  --mount=type=bind,source=pyproject.toml,target=pyproject.toml \
  --mount=type=bind,source=semantic_layer/pyproject.toml,target=semantic_layer/pyproject.toml \
  uv sync --frozen --no-dev --package pokemon-tcgp-semantic-layer

FROM python:3.12-slim-bookworm

WORKDIR /app

COPY --from=builder /app /app

ENV PATH="/app/.venv/bin:$PATH"
ENV PYTHONPATH="/app"

# Point to the new location of the mcp_server script
ENTRYPOINT ["python", "semantic_layer/semantic_layer/mcp_server.py"]
